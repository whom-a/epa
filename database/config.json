{
  "collections": [
    {
      "name": "users",
      "indexes": [
        { "field": "user_id", "unique": true }
      ]
    },
    {
      "name": "session_tokens",
      "indexes": [
        {"field": "session_token", "expireAfterSeconds": 604800},
        {"field": "user_id", "unique": true}
      ]
    },
    {
      "name": "posts",
      "indexes": [
        {"field": "created_at"}
      ]
    }
  ]
}